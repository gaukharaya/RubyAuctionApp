<div class="container">
  <div class="lead well">
    <div class="media">
      <div class="media-left">
        <a href="#">
          <img class="media-object" src="<%= @listing.gravatar %>">
        </a>
      </div>
      <div class="media-body">
        <h4 class="media-heading"><%= @listing.email %> asked:</h4>
        <%= @listing.body %>
      </div>
    </div>
  </div>


  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">

      <div>
        <button type="button" class="btn btn-success btn-sm"  data-toggle="modal" data-target="#new-bid-modal">Submit new bid</a>
        </div>

        <%= render 'home/new_bid_form' %>

        <% @bids.each do |bid| %>
          <div class="media">
            <div class="media-left">
              <a href="#">
                <img class="media-object" src="<%= bid.gravatar %>">
              </a>
            </div>
            <div class="media-body">
              <h4 class="media-heading"><%= bid.email %> bided:</h4>
              <div><%= time_ago_in_words bid.created_at %> ago</div>
              <%= bid.body %>
            </div>
          </div>
        <% end %>

        <% if @bids.empty? %>
          <div class="alert alert-info">Nothing here yet, be the first to bid?</div>
        <% end %>


      </div>
    </div>
  </div>
